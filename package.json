    "i18next": "^20.3.4",
    "i18next-http-backend": "^1.2.8",
    "js-yaml": "^4.1.0",
    "jsonpath": "^1.1.1",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.19",
    "lodash.clonedeep": "^4.5.0",
    "monaco-editor": "^0.23.0",
    "pluralize": "^8.0.0",
    "prop-types": "^15.7.2",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-i18next": "^11.11.3",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
