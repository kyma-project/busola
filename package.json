    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/uuid": "^9.0.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.6",
    "babel-polyfill": "^6.26.0",
    "cli-color": "^1.4.0",
    "concurrently": "^7.6.0",
    "copy-webpack-plugin": "^11.0.0",
    "enzyme": "^3.10.0",
    "enzyme-to-json": "^3.4.0",
    "fancy-log": "^1.3.3",
    "gulp-clean": "^0.4.0",
    "gulp-concat": "^2.6.1",
    "gulp-rename": "^2.0.0",
    "husky": "^2.4.1",
    "jest": "26.6.0",
    "jsdom-worker-fix": "^0.1.8",
    "lint-staged": "^10.4.0",
    "minimatch": "^3.0.5",
    "minimist": "^1.2.6",
    "node-sass": "^9.0.0",
    "prettier": "^1.18.2",
    "react-app-rewired": "^2.2.1",
    "react-scripts": "^5.0.0",
    "sass-loader": "^13.3.2",
    "typescript": "^4.8.4",
    "uuid": "^9.0.0"
  },
  "lint-staged": {
    "src/i18n/*.yaml": "yaml-sort --lineWidth=-1 -i ",
    "*.{ts,tsx,js,jsx,json,html,css,scss,yaml,md}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
