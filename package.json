{
  "private": true,
  "license": "Apache-2.0",
  "name": "@kyma-project/busola",
  "version": "0.0.1-rc.8",
  "scripts": {
    "bootstrap": "npm install && npm run install:libraries && npm run build:libraries && npm run install:apps",
    "bootstrap:ci": "npm ci && npm run ci:libraries && npm run build:libraries",
    "install:libraries": "gulp install:libraries",
    "ci:libraries": "gulp ci:libraries",
    "build:libraries": "gulp build:libraries",
    "watch:libraries": "gulp watch:libraries",
    "install:apps": "gulp install:apps",
    "start": "./scripts/pre-start-warning.sh && lerna exec --parallel -- npm run start:kyma",
    "start:api": "./scripts/pre-start-warning.sh && lerna exec --parallel -- npm run start:kyma:api",
    "lint-check": "prettier --config ./.prettierrc --ignore-path ./.prettierignore --check '**/*.{ts,tsx,js,jsx,json,html,css,yaml}'",
    "lint-fix": "prettier --config ./.prettierrc --ignore-path ./.prettierignore --write '**/*.{ts,tsx,js,jsx,json,html,css,yaml}'",
    "markdownlint": "markdownlint **/*.md --ignore core/src/assets,",
    "lint-staged": "lint-staged",
    "test-shared-lib": "cd shared && jest",
    "start:npx": "npm run start:npx --prefix=backend",
    "build:npx": "npm run bootstrap && lerna exec --parallel -- npm run build:npx"
  },
  "dependencies": {
    "@luigi-project/client": "^1.12.1",
    "@luigi-project/core": "^1.12.1",
    "@monaco-editor/react": "^3.6.3",
    "@sap-theming/theming-base-content": "^11.1.28",
    "ajv": "^6.10.2",
    "classnames": "^2.2.6",
    "constate": "^1.2.0",
    "copy-to-clipboard": "^3.2.0",
    "core-js": "^3.3.6",
    "file-saver": "^2.0.2",
    "fundamental-react": "^0.13.1",
    "fundamental-styles": "^0.17.0",
    "lodash": "^4.17.19",
    "lodash.clonedeep": "^4.5.0",
    "monaco-editor": "^0.23.0",
    "prop-types": "^15.7.2",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "rfc6902": "^4.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "cli-color": "^1.4.0",
    "concurrently": "^5.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.1",
    "gulp-clean": "^0.4.0",
    "gulp-watch": "^5.0.1",
    "handlebars": "^4.7.7",
    "jest": "^24.8.0",
    "jsdom-worker-fix": "^0.1.8",
    "node-sass": "^4.12.0",
    "react-scripts": "3.4.0",
    "react-test-renderer": "^16.9.0",
    "waait": "^1.0.5",
    "webpack-cli": "^3.3.5",
    "json-url": "^2.6.0",
    "prettier": "^1.18.2"
  },
  "optionalDependencies": {
    "husky": "^2.4.1",
    "lerna": "^3.15.0",
    "lint-staged": "^10.4.0",
    "markdownlint-cli": "^0.17.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,html,css,yaml}": [
      "prettier --write",
      "git add"
    ],
    "**/*.md": [
      "markdownlint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
