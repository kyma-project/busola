    "concurrently": "^5.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.1",
    "gulp-clean": "^0.4.0",
    "gulp-watch": "^5.0.1",
    "handlebars": "^4.7.7",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "jsdom-worker-fix": "^0.1.8",
    "lerna": "^4.0.0",
    "lint-staged": "^10.4.0",
    "node-sass": "^4.14.1",
    "prettier": "^1.18.2",
    "react-scripts": "3.4.0",
    "react-test-renderer": "^16.9.0",
    "waait": "^1.0.5",
    "webpack-cli": "^4.7.2",
    "yaml-sort": "^1.1.0"
  },
  "lint-staged": {
    "core/src/i18n/*.yaml": "yaml-sort --lineWidth=-1  -i",
